<% id = new Date().getTime() %>
<% content_description = description.replace(/"/g, '&quot;')  %>

<li class="list-group-item manual" id="content_record_<%= id %>">
  <input type="checkbox" name="discipline_content_record[content_record_attributes][content_descriptions][]" id="discipline_content_record_content_record_attributes_content_descriptions_" value="<%= content_description %>" hidden="hidden"
    checked="checked" data-content_description="<%= content_description %>">
  <span style="margin-left: 5px;"><%= content_description %></span>
  <div class="pull-right" style="margin-top: -7px;">
    <a class="btn btn-success" onclick="editContentRecord('content_record_<%= id %>')">
      <i class="fa fa-pencil"></i>
    </a>
    <a class="btn btn-danger" onclick="removeContentRecord('content_record_<%= id %>')">
      <i class="fa fa-trash"></i>
    </a>
  </div>
</li>
