<% @students_by_classrooms.each do |classroom| %>
  <% classroom_id, classroom_info = classroom %>
  <table>
    <thead>
      <tr>
        <th style='text-align: center; font-size: 15px; background-color: #DEDEDE; font-weight: bold;'
          colspan='2'
        >
          Identificação
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td colspan='2' style='padding: 5px;'>
          <b style='font-size: 10px'> Unidade </b>
          <br> <%= @unity.name %>
        </td>
      </tr>
      <tr>
        <td style='width: 50%'>
          <b style='font-size: 10px'> Turma </b>
          <br> <%= classroom_info[:classroom_name] %>
          </td>
          <td colspan='2' style='width: 50%'>
            <b style='font-size: 10px'> Período </b>
            <br> <%= @range_dates %>
          </td>
      </tr>
      <tr>
        <td colspan='2' style='padding: 5px;'>
          <b style='font-size: 10px'> Ano letivo </b>
          <br> <%= @school_calendar_year %>
        </td>
      </tr>

      <%= render partial: 'student_fields', locals: { classroom_info: classroom_info }%>
    </tbody>
  </table>
<% end %>
