<% if current_user %>
  <script>
    dataLayer = [{
      'user_id': <%= current_user.id %>,
      'user_name': '<%= current_user.name || 'Desconhecido' %>',
      'user_email': '<%= current_user.email %>',
      'user_access_level': '<%= current_user.current_user_role.role.access_level %>',
      'user_created_at': <%= current_user.created_at.to_i %>,
    }];
  </script>
<% end %>